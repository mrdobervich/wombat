<%= simple_form_for(@assessment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :grader %>
    <%= f.association :student %>
    <%= f.association :completed_assignment %>
    <%= f.input :comment %>
    <%= f.input :official %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
