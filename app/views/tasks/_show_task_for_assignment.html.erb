<p>
  <b>Title:</b>
  <%= task.title %>
</p>

<p>
  <b>Short description:</b>
  <%= task.short_description %>
</p>

<p>
  <b>Long description:</b>
  <pre>
    <%= raw addPrettifyTags(task.long_description) %>
  </pre>
</p>

<p>
  <b>Difficulty:</b>
  <%= task.difficulty %>
</p>

<% if is_admin %>
  <%= link_to 'Edit', edit_task_path(task) %> |
<% end %>

<script>
  prettyPrint()
</script>
