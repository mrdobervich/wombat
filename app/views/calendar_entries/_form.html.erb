<%= simple_form_for(@calendar_entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= select("m", "cids", Course.all.collect {|c| [ c.full_name, c.id ] }, {}, { :multiple => true, :size => 5 }) %>
    <%= f.input :date %>
    <%= f.input :title %>
    <%= f.cktext_area :body, :class => "someclass", :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
