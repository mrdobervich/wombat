<%= simple_form_for(@featured_code) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :short_task_description %>
    <%= f.input :task_description %>
    <%= f.input :author %>
    <%= f.input :code %>
    <%= f.association :course %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
